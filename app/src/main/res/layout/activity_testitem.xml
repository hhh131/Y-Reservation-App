<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:layout_marginBottom="8dp"
    android:background="@android:color/white"
    android:id="@+id/parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/LLtest1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/L_seat1"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="1"
                android:textStyle="bold"
                android:background="@drawable/seat_button" />

            <Button
                android:id="@+id/L_seat2"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="2"
                android:textStyle="bold"
                android:background="@drawable/seat_button" />

            <Button
                android:id="@+id/L_seat3"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="3"
                android:textStyle="bold"
                android:background="@drawable/seat_button" />

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />

        <LinearLayout
            android:id="@+id/LRtest1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/R_seat1"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="4"
                android:textStyle="bold"
                android:background="@drawable/seat_button" />

            <Button
                android:id="@+id/R_seat2"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:background="@drawable/seat_button"
                android:text="5"
                android:textStyle="bold" />

            <Button
                android:id="@+id/R_seat3"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="6"
                android:textStyle="bold"
                android:background="@drawable/seat_button" />

        </LinearLayout>

    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>